<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity">

    <LinearLayout
        android:id="@+id/number01Layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/number02Layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:text="@string/number01"
            android:textColor="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/number01"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:inputType="number"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/number02Layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/number01Layout"
        android:layout_marginBottom="144dp"
        app:layout_constraintBottom_toTopOf="@+id/okBtnLayout"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:text="Number 02"
            android:textColor="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/number02"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/okBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/number02Layout"
        android:layout_marginBottom="176dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-16dp">


        <Button
            android:id="@+id/okBtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_shape"
            android:clickable="true"
            android:fontFamily="sans-serif-black"
            android:text="OK" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>